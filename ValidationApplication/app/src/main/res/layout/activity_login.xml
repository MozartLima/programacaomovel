<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="LOGIN"
        android:textSize="50dp"
        android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Informe E-mail:"
            android:id="@+id/emailLogTextView">
        </TextView>

        <EditText
            android:id="@+id/emailLogEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Informe seu E-mail"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext">
        </EditText>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Senha:"
            android:id="@+id/senhaLogTextView">
        </TextView>

        <EditText
            android:id="@+id/senhaLogEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Senha"
            android:inputType="textPassword">
        </EditText>



        <Button
            android:text="Login"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:onClick="logando"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btnlogando"/>

        <Button
            android:text="Cadastro"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:onClick="cadastrando"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btncadastro"/>

    </LinearLayout>
