<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mozart.appconfiguracoes.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:id="@+id/textView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:id="@+id/config"
        android:layout_marginTop="20dp"
        android:onClick="abrirConfiguracoes"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Musicas"
        android:id="@+id/msc"
        android:layout_marginTop="70dp"
        android:onClick="abrirMusicas"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mapas"
        android:id="@+id/map"
        android:layout_marginTop="120dp"
        android:onClick="abrirMapa"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/msg"
        android:layout_marginTop="170dp"
        android:onClick="abrirMms"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarme"
        android:id="@+id/despertador"
        android:layout_marginTop="220dp"
        android:onClick="abrirAlarme"
        />
</RelativeLayout>